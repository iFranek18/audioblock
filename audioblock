<body>
  <div style="text-align: center">



<audio id="player" controls>
    <source src="no lie.mp3" type="audio/mpeg">
    <source src="Ramię w ramię.mp3" type="audio/mpeg">
    <source src="Bad liar.mp3" type="audio/mpeg">
    
</audio>

<br><br>

<button onclick="playMusic()">▶️ Odtwórz</button>
<button onclick="pauseMusic()">⏸️ Pauza</button>
<button onclick="nextSong()">⏭️ Następna</button>

<script>
const songs = [
    "no lie.mp3",
    "ramię w ramię.mp3",
    "Bad liar.mp3"
];

let i = 0;
const player = document.getElementById("player");

function playMusic() {
    player.play();
}

function pauseMusic() {
    player.pause();
}

function nextSong() {
    i = (i + 1) % songs.length;
    player.src = songs[i];
    player.play();
}
</script>

<br><br><br><br><br><br><br><br>


